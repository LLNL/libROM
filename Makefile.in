## Description: Makefile for the entire CAROM distribution.

.SUFFIXES: .o .C

LIBROM = libROM.a

CXX		= @CXX@
CXXFLAGS	= @CXX_FLAGS@
CPPFLAGS	= @CPPFLAGS@ @INC_PATH@
LDFLAGS		= @LD_FLAGS@ @LIB_PATH@
LDLIBS		= $(LIBROM) @LIB_NAME@
AR		= @AR@

OBJS = Matrix.o \
       Vector.o \
       BasisReader.o \
       BasisWriter.o \
       SVDBasisGenerator.o \
       SVDSampler.o \
       SVD.o \
       IncrementalSVD.o \
       IncrementalSVDFastUpdate.o \
       IncrementalSVDStandard.o \
       IncrementalSVDBasisGenerator.o \
       IncrementalSVDSampler.o \
       StaticSVD.o \
       StaticSVDBasisGenerator.o \
       StaticSVDSampler.o \
       Database.o \
       HDFDatabase.o \
       Utilities.o \
       ParallelBuffer.o \
       DEIM.o \
       QDEIM.o \
       GNAT.o

HEADERS = $(OBJS:%.o=%.h)

default: lib

all: lib uneven_dist random_test weak_scaling smoke_test tests/gtest_runner

lib: $(OBJS)
	ar ru $(LIBROM) $(OBJS)

uneven_dist: lib uneven_dist.o
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o uneven_dist uneven_dist.o $(LDLIBS)

random_test: lib random_test.o
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o random_test random_test.o $(LDLIBS)

weak_scaling: lib weak_scaling.o
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o weak_scaling weak_scaling.o $(LDLIBS)

smoke_test: lib smoke_test.o
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o smoke_test smoke_test.o $(LDLIBS)

tests/gtest_runner: tests/gtest_runner.o libROM.a
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o $@ tests/gtest_runner.o $(LDLIBS)

.C.o :
	$(CXX) $(CXXFLAGS) $(CPPFLAGS) -o $@ -c $<

clean:
	-rm -f *.o $(LIBROM) uneven_dist random_test weak_scaling smoke_test
	-rm -f tests/*.o tests/gtest_runner

dox:
	(cd docs && $(MAKE) $@)

# Normally, headers are installed using 644 octal permissions, but
# "world"/"other" access is prohibited on the LC
install: lib
	mkdir -p @prefix@/include
	install -C -m 640 $(HEADERS) @prefix@/include
	mkdir -p @prefix@/lib
	install -C -m 750 $(LIBROM) @prefix@/lib

include Makefile.depend
